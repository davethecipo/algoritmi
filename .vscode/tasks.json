{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GCC",
            "type": "shell",
            "command": "gcc",
            "problemMatcher": [
                "$gcc"
            ],
            "args": [
                "-g",
                "-Wextra",
                "-Wall",
                "-Wfloat-equal",
                "-Wundef",
                "-Wpointer-arith",
                "-Wcast-align",
                "-Wstrict-prototypes",
                "-Wwrite-strings",
                "-Wcast-qual",
                "-Wswitch-default",
                "-Wswitch-enum",
                "-Wconversion",
                "-Wunreachable-code",
                "selection-sort/selection.c",
                "-o",
                "sort",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}